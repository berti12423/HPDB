<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Other style attributes can go here -->
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>

    </style>

    <!-- Style for the dropdown items -->
    <style name="SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpinnerDropDownItemChild" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">#292929</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>